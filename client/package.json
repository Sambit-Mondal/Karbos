{
  "name": "karbos-client",
  "version": "1.0.0",
  "private": true,
  "description": "Karbos client application built with Next.js",
  "author": "Sambit-Mondal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sambit-Mondal/Karbos.git",
    "directory": "client"
  },
  "bugs": {
    "url": "https://github.com/Sambit-Mondal/Karbos/issues"
  },
  "homepage": "https://github.com/Sambit-Mondal/Karbos#readme",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "rm -rf .next out node_modules",
    "prepare": "cd .. && husky install client/.husky || true"
  },
  "dependencies": {
    "next": "16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.7",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.18.0",
    "eslint-config-next": "16.0.7",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
